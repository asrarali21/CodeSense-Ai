# Edit the .gitignore file to combine both versions
cat > .gitignore << 'EOF'
# Node modules
node_modules/
frontend/node_modules/
backend/node_modules/

# Environment variables
.env
backend/.env
frontend/.env
*.env.local

# Build outputs
dist/
build/
frontend/dist/
frontend/build/
backend/dist/

# Logs
*.log
logs/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# Editor files
.vscode/
.idea/
.DS_Store
*.suo
*.ntvs*
*.njsproj
*.sln
*.sw?

# API keys and secrets
keys/
service-account*.json

# OS generated files
.DS_Store?
._*
.Spotlight-V100
.Trashes

# Temporary files
*.tmp
*.temp
EOF